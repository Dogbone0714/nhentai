{
  "manifest_version": 3,
  "name": "Nhentai Auto Search",
  "version": "1.0",
  "description": "自動搜尋 Nhentai 漫畫",
  "permissions": [
    "activeTab",
    "storage",
    "contextMenus"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "images/image-16.png",
    "48": "images/image-48.png",
    "128": "images/image-128.png"
  }
}